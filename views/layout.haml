!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title #{@title}
    %link{:rel => "shortcut icon", :href => "/assets/favicon.ico"}
    %link{:href => "/assets/app.css", :rel => "stylesheet"}
    %script{:src => "/assets/app.js"}
  %body
    %nav.navbar.navbar-default.navbar-static-top{:role => 'navigation'}
      .container
        .navbar-header
          %a.navbar-brand{:href => '/'} #{@title}
        #navbar.navbar-collapse.collapse
          %ul.nav.navbar-nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{:role => 'button', :data => {:toggle => 'dropdown'}, :href => '/'}
                Bugzilla
                %span.caret
              %ul.dropdown-menu{:role => 'menu'}
                - @products.each do |product|
                  %li
                    %a{:href => "/#{product.gsub(/ /,'_')}/bugzilla"} #{get_label(product)}
            - if !@changes_repos["github"].nil?
              %li.dropdown
                %a.dropdown-toggle{:role => 'button', :data => {:toggle => 'dropdown'}, :href => '/'}
                  Github
                  %span.caret
                %ul.dropdown-menu{:role => 'menu'}
                  - @changes_repos["github"].each do |repo|
                    %li
                      %a{:href => "/github/#{repo.organization.name}/#{repo.name}"} #{repo.name}
            - if !@changes_repos["gitlab"].nil?
              %li.dropdown
                %a.dropdown-toggle{:role => 'button', :data => {:toggle => 'dropdown'}, :href => '/'}
                  Gitlab
                  %span.caret
                %ul.dropdown-menu{:role => 'menu'}
                  - @changes_repos["gitlab"].each do |repo|
                    %li
                      %a{:href => "/gitlab/#{repo.organization.name}/#{repo.name}"} #{repo.name}
            %li
              %a.dropdown-toggle{:role => 'button', :href => '/help'}
                Help
    = yield
    :javascript
      $('.collapse').collapse();
